<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#80000000">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_marginRight="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:background="#fff">
            <TextView
                android:id="@+id/payadr"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"
                android:layout_centerInParent="true"
                android:text="JDJSDJAJL"
                android:textColor="#777"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="55dp"
            android:layout_alignParentRight="true"
            android:background="#fff">
            <EditText
                android:id="@+id/payamount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical"
                android:layout_centerInParent="true"
                android:textColorHint="#444444"
                android:hint="@string/chat_tranfer_amount"
                android:textColor="#777"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="115dp"
            android:layout_alignParentRight="true"
            android:background="#fff">
            <EditText
                android:id="@+id/paymonos"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical"
                android:layout_centerInParent="true"
                android:textColorHint="#444444"
                android:hint="@string/chat_tranfer_remark"
                android:textColor="#777"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="175dp"
            android:layout_alignParentRight="true"
            android:background="#fff">
            <EditText
                android:id="@+id/paypwds"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical"
                android:layout_centerInParent="true"
                android:textColorHint="#444444"
                android:hint="@string/chat_tranfer_pay_pwd"
                android:textColor="#777"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="235dp"
            android:background="#fff">
            <Button
                android:id="@+id/chatsendassetbtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="20dp"
                android:text="@string/chat_tranfer_confirm_button"
                android:textColor="#ffffff"
                android:background="#0070C9"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>